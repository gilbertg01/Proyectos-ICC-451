<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Diseño del mensaje para el lado izquierdo (mensajes recibidos) -->
    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/blue"
        android:padding="8dp"
        android:layout_marginEnd="80dp">

        <TextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Hello"/>

        <TextView
            android:id="@+id/left_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:text="12:00 PM"/>
    </LinearLayout>

    <!-- Diseño del mensaje para el lado derecho (mensajes enviados) -->
    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/green"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp">

        <TextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/right_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:text="12:00 PM"/>
    </LinearLayout>

</RelativeLayout>
